<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.meuprojeto.dm.activity.ConfirmacaoPedidoActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/txt_ola"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/letras_roxo"
                app:fontFamily="@font/scada" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/txt_nome_usuario"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/letras_laranja"
                app:fontFamily="@font/scada" />
        </TableRow>

        <TextView
            android:id="@+id/textView62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/txt_compra_finalizada"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/letras_roxo"
            app:fontFamily="@font/scada" />

        <View
            android:id="@+id/divider0"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="?android:attr/listDivider" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvConfirmacaoPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="?android:attr/listDivider" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView94"
                                android:layout_width="210dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="@string/txt_quant_itens"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textColor="@color/letras_roxo"
                                app:fontFamily="@font/scada" />

                            <TextView
                                android:id="@+id/tvQuantidadeTotalItem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="@string/txt_quantidade"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textColor="@color/letras_roxo"
                                app:fontFamily="@font/scada" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/textView96"
                                android:layout_width="210dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="@string/txt_valor_compra"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textColor="@color/letras_roxo"
                                app:fontFamily="@font/scada" />

                            <TextView
                                android:id="@+id/tvValorTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="@string/txt_valor"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textColor="@color/letras_roxo"
                                app:fontFamily="@font/scada" />
                        </TableRow>
                    </TableLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="?android:attr/listDivider" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button44"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/common_google_signin_btn_text_dark_default"
                        android:onClick="confirmacao"
                        android:text="@string/txt_ok"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/letras_roxo"
                        app:fontFamily="@font/scada" />
                </android.support.v7.widget.CardView>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="?android:attr/listDivider" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
