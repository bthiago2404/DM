<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tvQuantidadeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/txt_quantidade"
            android:textColor="@color/letras_roxo" />

        <TextView
            android:id="@+id/tvNomeItem"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/txt_item1"
            android:textColor="@color/letras_roxo" />

        <TextView
            android:id="@+id/tvValorItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/txt_valor"
            android:textColor="@color/letras_roxo" />

    </TableRow>

</LinearLayout>