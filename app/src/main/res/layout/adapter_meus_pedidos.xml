<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/txt_pedido1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/letras_roxo"
            android:textStyle="bold"
            app:fontFamily="@font/scada" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/txt_valor_compra"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/letras_roxo"
                app:fontFamily="@font/scada" />

            <TextView
                android:id="@+id/tvValorPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/txt_valor"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/letras_roxo"
                app:fontFamily="@font/scada" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/txt_data_compra"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/letras_roxo"
                app:fontFamily="@font/scada" />

            <TextView
                android:id="@+id/tvDataPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/txt_data"
                android:textColor="@color/letras_roxo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/txt_forma_pagamento"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/letras_roxo"
                app:fontFamily="@font/scada" />

            <TextView
                android:id="@+id/tvTipoPagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/txt_pagamento"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/letras_roxo"
                app:fontFamily="@font/scada" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/txt_tipo_entrega"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/letras_roxo"
                app:fontFamily="@font/scada" />

            <TextView
                android:id="@+id/tvTipoEntrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/txt_entrega"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/letras_roxo"
                app:fontFamily="@font/scada" />
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>
