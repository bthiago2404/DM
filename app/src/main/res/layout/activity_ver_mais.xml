                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/icons8_paid_64" />

                    <Button
                        android:id="@+id/button73"
