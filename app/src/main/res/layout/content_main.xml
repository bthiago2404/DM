<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="390dp"
        android:layout_marginTop="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/banner_sejabemvindo"
                android:onClick="anuncio"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="506dp" />

            <TextView
                android:id="@+id/txt_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/txt_on"
                android:textAppearance="@style/TextAppearance.AppCompat"
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="486dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button27"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />

                    <Button
                        android:id="@+id/button28"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button29"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />

                    <Button
                        android:id="@+id/button30"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button31"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />

                    <Button
                        android:id="@+id/button32"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button33"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />

                    <Button
                        android:id="@+id/button34"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/txt_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/txt_off"
                android:textAppearance="@style/TextAppearance.AppCompat"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="62dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button35"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />

                    <Button
                        android:id="@+id/button36"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button37"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />

                    <Button
                        android:id="@+id/button38"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button39"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />

                    <Button
                        android:id="@+id/button40"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button41"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />

                    <Button
                        android:id="@+id/button42"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="40dp"
                        android:background="@drawable/icons_loja" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>



    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btn_como_funciona"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/icons8_question_mark_64"
        app:layout_constraintEnd_toStartOf="@+id/btn_list_compra"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo" />

    <Button
        android:id="@+id/btn_list_compra"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/icons8_checklist_64"
        app:layout_constraintEnd_toStartOf="@+id/btn_meus_pedidos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_como_funciona"
        app:layout_constraintTop_toBottomOf="@+id/image_logo" />

    <Button
        android:id="@+id/btn_meus_pedidos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/icons8_ingredients_64"
        app:layout_constraintEnd_toStartOf="@+id/btn_mapa_lojas"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_list_compra"
        app:layout_constraintTop_toBottomOf="@+id/image_logo" />

    <Button
        android:id="@+id/btn_mapa_lojas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/icons8_europe_64"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_meus_pedidos"
        app:layout_constraintTop_toBottomOf="@+id/image_logo" />

</android.support.constraint.ConstraintLayout>
