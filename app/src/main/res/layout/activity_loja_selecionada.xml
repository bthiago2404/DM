    tools:context="br.com.meuprojeto.dm.activity.LojaSelecionadaActivity">

    <EditText
        android:id="@+id/etBuscarDepartamento"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="@string/txt_buscar_produto"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:textColor="@color/capa"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button85"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button85"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/icons8_search_64"
        app:layout_constraintBottom_toBottomOf="@+id/etBuscarDepartamento"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/etBuscarDepartamento" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05109489" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.77" />

    <Button
        android:id="@+id/btnLocaisEntrega"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/icons8_europe_64"
        android:onClick="locaisEntrega"
        app:layout_constraintBottom_toBottomOf="@+id/etBuscarDepartamento"
        app:layout_constraintStart_toEndOf="@+id/etBuscarDepartamento"
        app:layout_constraintTop_toTopOf="@+id/etBuscarDepartamento"
        app:layout_constraintVertical_bias="0.0" />

    <Button
