<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:visibility="visible"
    android:backgroundTint="@color/capa">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="85dp"
        android:layout_height="82dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btn_login_logout"
        android:layout_width="104dp"
        android:layout_height="34dp"
        android:background="@color/fundoBotao"
        android:text="@string/btn_login_logout"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/letrasBotao"
        android:textSize="12sp"
        android:textStyle="italic"
        android:typeface="normal" />

    <Button
        android:id="@+id/btn_meus_dados"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@color/fundoBotao"
        android:text="@string/btn_meus_dados"
        android:textColor="@color/letrasBotao"
        android:textSize="12sp"
        android:typeface="normal" />

</LinearLayout>
