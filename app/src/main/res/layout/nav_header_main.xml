<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:backgroundTint="@color/capa"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:visibility="visible"
    tools:ignore="UnusedAttribute">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="85dp"
        android:layout_height="82dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/icone01" />

    <Button
        android:id="@+id/btn_login_logout"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@color/fundoBotao"
        android:onClick="login"
        android:text="@string/txt_login_logout"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        android:typeface="normal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:fontFamily="@font/scada" />

    <Button
        android:id="@+id/btn_meus_dados"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@color/fundoBotao"
        android:onClick="meusDados"
        android:text="@string/txt_meus_dados"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        android:typeface="normal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:fontFamily="@font/scada" />

</LinearLayout>
