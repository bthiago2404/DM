    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBuscarDepartamento">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBanner"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/banner_seja_bem_vindo" />

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/txt_mercados_disponiveis"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/letras_roxo"
            app:fontFamily="@font/scada" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="2dp"
            app:cardMaxElevation="2dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivLoja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/icons8_shop_64" />

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLoja"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="25dp"
                            android:text="@string/txt_loja"
                            android:textColor="@color/letras_roxo"
                            android:textSize="18sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            app:fontFamily="@font/scada" />

                    </TableRow>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTempoEntrega"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/txt_tempo_entrega"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/letras_roxo"
                        app:fontFamily="@font/scada" />

                    <TextView
                        android:id="@+id/tvValorEntrega"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/txt_valor_entrega"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/letras_roxo"
                        app:fontFamily="@font/scada" />
                </TableRow>
            </TableLayout>

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/divider0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
