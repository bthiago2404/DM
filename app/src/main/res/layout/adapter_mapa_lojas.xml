<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        app:cardBackgroundColor="#00000000">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivLoja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:srcCompat="@drawable/icons8_shop_64" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvLoja"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_loja"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/letras_normal"
                            android:textSize="18sp"
                            app:fontFamily="@font/scada" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvCidade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_cidade"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/letras_normal_clara"
                            app:fontFamily="@font/scada" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tvBairro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_bairro"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/letras_normal_clara"
                            app:fontFamily="@font/scada" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvTelefone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_contato_telefone"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/letras_normal_clara"
                            app:fontFamily="@font/scada" />
                    </TableRow>
                </TableLayout>

            </TableRow>

        </TableLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
